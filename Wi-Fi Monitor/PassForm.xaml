<Window x:Class="Wi_Fi_Monitor.PassForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wi_Fi_Monitor"
        mc:Ignorable="d"
        Title="PassForm" Height="250.115" Width="300">
    <Grid Background="#252526">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Foreground="White"
                   VerticalAlignment="Center" 
                   Width="120"
                   TextAlignment="Center">
            <Run Text="Введите пароль" />
        </TextBlock>
        
        <TextBox x:Name="Password_box" 
                 Grid.Row="1" 
                 Height="23" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Center" 
                 Width="120" 
                 TextChanged="Password_TextChanged"/>

        <Button x:Name="Enter_btn"
                Grid.Row="2" 
                Content="Ок" 
                Width="100" 
                Height="30"
                Click="Enter_btn_Click"/>

    </Grid>
</Window>
